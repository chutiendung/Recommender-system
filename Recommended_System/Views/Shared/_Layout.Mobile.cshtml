<!DOCTYPE html> 
<html> 
    <head> 
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>

        <script src="@Url.Content("~/Content/Desktop/jquery-1.10.2.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/Desktop/bootstrap/js/bootstrap.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/Desktop/bootstrap/js/bootstrap-tooltip.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/Desktop/bootstrap/js/bootstrap-popover.js")" type="text/javascript"></script>

        <script src="@Url.Content("~/Content/Desktop/MyScript.js")" type="text/javascript"></script>


        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/Mobile/css", "~/Content/jquerymobile/css")
        @Scripts.Render("~/bundles/jquery", "~/bundles/jquerymobile")

        <link href="~/Content/Desktop/images/Logo/shopLogo.jpg" rel="shortcut icon" />

        <link rel="stylesheet" href="~/Content/Desktop/css/font-awesome/css/font-awesome.min.css" />


        <link href="~/Content/Desktop/bootstrap/css/bootstrap.css" rel="newer stylesheet" type="text/css" media="screen" />
        <link href="~/Content/Mobile/css/slider/slider.css" rel="newest stylesheet" type="text/css" media="screen" />
        <link href="~/Content/Mobile/css/slider/slider2.css" rel="newest stylesheet" type="text/css" media="screen" />
        <link href="~/Content/Mobile/css/style.css" rel="stylesheet" type="text/css" media="screen" />
        <link href="~/Content/Mobile/css/myStyle.css" rel="stylesheet" type="text/css" media="screen" />


        <script>
            $(document).ready(function () {
                $.mobile.ajaxEnabled = false; 
            });
        </script>
    </head> 
<body> 

    <div data-role="page" data-theme="a">
        @Html.Partial("_ViewSwitcher")

        <div data-role="header">
            <h1>@ViewBag.Title</h1>
        </div>

        <div data-role="content">
            @RenderSection("featured", false)
            @RenderBody()		
        </div>

    </div>

</body>
</html>